{% paginate collection.products by 8 %}
  <section class="serach-sec">
    {% if search.performed %}
      <div style="    font-size: 23px;">
        Here's your results for <strong> {{ search.terms }}</strong>
      </div>
      <div
        style="
          display: flex;
          justify-content: center;
        "
      >
        <div class="product-grid">
          {% for result in search.results %}
            {% if result.object_type == 'product' %}
              {% render 'product-card', product: result %}
            {% endif %}
          {% endfor %}
        </div>
        {% render 'pagination', paginate: paginate %}
      </div>
    {% else %}
      <div class="width:100%;height:100%; display:flex;justify-items: center;align-itmes:center;">
        <h2>Result not found.</h2>
      </div>
    {% endif %}
  </section>
{% endpaginate %}
<style>
  .serach-sec {
    padding: 30px;
  }
  .product-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* Three columns */
    justify-items: center;
    width: 86%;
    padding: 30px 0px;
  }
</style>
{% schema %}
{
  "name": "search",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#F4F4F4"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "search"
    }
  ]
}
{% endschema %}
